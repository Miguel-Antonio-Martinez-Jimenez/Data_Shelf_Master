<Window x:Class="DataShelfMaster.ViewWindows.EditSolicitudes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataShelfMaster.ViewWindows"
        mc:Ignorable="d"
        Title="EditSolicitudes" Height="620" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFEEF2F5">
        <Label Content="Edit Solicitude" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top" Width="300" VerticalContentAlignment="Center" FontSize="17" FontFamily="Bahnschrift SemiBold" HorizontalContentAlignment="Center" Background="#FF634ACE"/>
        <Image HorizontalAlignment="Center" Opacity="0.3" Height="180" Margin="0,170,0,0" VerticalAlignment="Top" Width="180" Source="/ViewWindows/Icon-Logo.png"/>
        <Label Content="Matric Student:" HorizontalAlignment="Center" Height="30" Margin="0,71,0,0" VerticalAlignment="Top" Width="200" FontFamily="Candara" FontSize="15"/>
        <ComboBox x:Name="CbxMatric" HorizontalAlignment="Center" Margin="0,101,0,0" VerticalAlignment="Top" Width="200" Height="25" FontSize="15" FontFamily="Calibri Light" BorderBrush="{x:Null}">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label Content="Name Book:" HorizontalAlignment="Center" Height="30" Margin="0,135,0,0" VerticalAlignment="Top" Width="200" FontFamily="Candara" FontSize="15"/>
        <ComboBox x:Name="CbxISBN" HorizontalAlignment="Center" Margin="0,167,0,0" VerticalAlignment="Top" Width="200" Height="25" FontSize="15" FontFamily="Calibri Light" BorderBrush="{x:Null}" Background="{x:Null}"/>
        <Label Content="Observation:" HorizontalAlignment="Center" Height="30" Margin="0,201,0,0" VerticalAlignment="Top" Width="200" FontFamily="Candara" FontSize="15"/>
        <TextBox x:Name="TxtObservation" HorizontalAlignment="Center" Margin="0,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" Background="#FFE8E8E8" BorderBrush="#FFC5C6C7" Width="200"/>
        <Label Content="Status:" HorizontalAlignment="Center" Height="30" Margin="0,354,0,0" VerticalAlignment="Top" Width="200" FontFamily="Candara" FontSize="15"/>
        <ComboBox x:Name="CbxStatus" HorizontalAlignment="Center" Margin="0,384,0,0" VerticalAlignment="Top" Width="200" Height="25" FontSize="15" FontFamily="Calibri Light" BorderBrush="{x:Null}">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem Content="Devolve"/>
            <ComboBoxItem Content="Borrowed"/>
        </ComboBox>
        <Button x:Name="BtnAdd" Content="ADD" HorizontalAlignment="Center" Height="36" Margin="0,459,0,0" VerticalAlignment="Top" Width="150" Background="#FF721EE6" FontFamily="Cascadia Mono" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Click="BtnAdd_Click"/>
        <Button x:Name="BtnBack" Content="Cancel" HorizontalAlignment="Center" Height="36" Margin="0,513,0,0" VerticalAlignment="Top" Width="150" Background="#FFAFACB3" FontFamily="Cascadia Mono" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Click="BtnBack_Click"/>
        <Label x:Name="MessageProblems" Content="" HorizontalAlignment="Center" Height="22" Margin="0,421,0,0" VerticalAlignment="Top" Width="250" FontFamily="Consolas" Foreground="Red" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="11"/>

    </Grid>
</Window>
